<div class="panel panel-default">
  <div class="panel-heading">
    <h4><span class="fa fa-tag"></span> <%= t('plugins.job_vacancy.job_division') %></h4>
    <%= link_to raw("<i class='fa fa-plus'></i> #{t('plugins.job_vacancy.add_job_division')}"), {action: :new}, class: "btn btn-primary pull-right" %>
  </div>
  <div class="panel-body">

    <table class="table">
      <thead>
      <tr>
        <th id=""><%= t('plugins.job_vacancy.table.id') %></th>
        <th id=""><%= t('plugins.job_vacancy.table.name') %></th>
        <th id=""><%= t('plugins.ecommerce.table.job_divisions') %></th>
        <th id=""><%= t('plugins.job_vacancy.table.status') %></th>
        <th><%= t('plugins.job_vacancy.table.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <%
        @job_divisions.each do |row|
          row = row.decorate
          options = row.options
%>
        <tr>
          <td><%= row.id %></td>
          <td><%= row.name %></td>
          <td><%= options[:job_divisions] %></td>
          <td><%= raw row.the_status %></td>
          <td>
            <%= link_to raw('<i class="fa fa-edit"></i>'), {action: :edit, id: row.id }, class: "btn btn-default btn-xs", title: "#{t('camaleon_cms.admin.button.edit')}" %>
          </td>
        </tr>
      <% end  %>


      </tbody>
    </table>
    <%= content_tag("div", raw(t('camaleon_cms.admin.message.data_found_list')), class: "alert alert-warning") if @job_divisions.empty? %>
    <%= will_paginate @job_divisions, renderer: BootstrapPagination::Rails  %>
  </div>
</div>
