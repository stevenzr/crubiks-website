    <script>
    $(document).ready(function(){
      $(window).scroll(function() { // check if scroll event happened
        if ($(document).scrollTop() > 50) { // check if user scrolled more than 50 from top of the browser window
          $(".header-nav").css("background-color", "rgba(255,255,255,0.8)"); // if yes, then change the color of class "navbar-fixed-top" to white (#f8f8f8)
        } else {
          $(".header-nav").css("background-color", "white"); // if not, change it back to transparent
        }
      });
    });
</script>
